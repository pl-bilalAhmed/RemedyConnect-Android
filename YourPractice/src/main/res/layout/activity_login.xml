<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/lobackground"
    android:weightSum="1">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/logo"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/lo_roc_logo"
        android:layout_marginTop="5dp" />





    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="275dp"
        android:background="@drawable/lowhitebkgrnd"
        android:rowCount="4"
        android:columnCount="2"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loginTextContent"
            android:id="@+id/loginTextView"
            android:textColor="#000000"
            android:layout_weight="0.06"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:layout_row="0"
            android:layout_column="0"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:layout_columnSpan="2"
            android:layout_marginTop="15dp"
            android:textIsSelectable="true" />




        <EditText
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:id="@+id/userName"
            android:hint="@string/yourUsername"
            android:textColor="#000000"
            android:background="#ffffffff"
            android:layout_column="0"
            android:layout_row="1"
            android:nextFocusDown="@+id/password"
            android:inputType="text"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_columnSpan="2" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:hint="@string/yourPassword"
            android:textColor="#000000"
            android:background="#ffffffff"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_columnSpan="2"
            android:nextFocusRight="@+id/buttonLogin"
            android:layout_marginBottom="10dp" />


        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/forgotpasswordMessage"
            android:id="@+id/forgotPaswsord"
            android:textColor="#000000"
            android:clickable="true"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:textIsSelectable="true"
            android:textStyle="bold"
           />
        <Button

            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:text="@string/Login"
            android:id="@+id/buttonLogin"
            android:textColor="#ffffffff"
            android:background="@drawable/lobutton"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:focusable="true" />

    </GridLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/loginMessage"
        android:id="@+id/loginTime"
        android:textColor="#ffffffff"
        android:layout_marginTop="20dp"
        android:gravity="fill_horizontal|center_horizontal"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
