<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ff2a8ac7"
    android:weightSum="1">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/logo"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/roc_logo"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/loginTextContent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/loginTextView"
        android:textColor="#ffffffff"
        android:layout_weight="0.06"
        android:layout_centerVertical="true"
        android:gravity="center|left"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="10dp" />


    <TextView
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/loginMessage"
        android:id="@+id/textView"
        android:textColor="#ffffffff"
        android:layout_marginLeft="33dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:id="@+id/userName"
        android:hint="@string/yourUsername"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#ff2a8ac7"
        android:background="#ffffffff" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:hint="@string/yourPassword"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textColor="#ff2a8ac7"
        android:background="#ffffffff"
        android:layout_marginTop="15dp" />

    <Button

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Login"
        android:id="@+id/buttonLogin"
        android:textColor="#ff2a8ac7"
        android:background="#ffffffff"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/forgotpasswordMessage"
        android:id="@+id/forgotPaswsord"
        android:textColor="#ffffffff"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="15dp"
        android:clickable="true" />
</LinearLayout>
