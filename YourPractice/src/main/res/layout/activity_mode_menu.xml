<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mainMenuLayout"
                android:columnCount="4"
                android:layout_gravity="right"
                android:background="#ff2a8ac7">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/logo"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/roc_logo" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/ModetextView"
        android:id="@+id/midButtonRow">

        <Button
            style="@style/MainMenuButton"
            android:layout_width="0dp"
            android:layout_height="109dp"
            android:layout_weight="0.5"
            android:id="@+id/button"
            android:layout_margin="10dp"
            android:text="@string/button_provide_staff_text"
            android:textColor="#ff2a8ac7" />

        <Button
            style="@style/MainMenuButton"
            android:layout_width="0dp"
            android:layout_height="109dp"
            android:layout_weight="0.5"
            android:id="@+id/button10"
            android:layout_margin="10dp"
            android:textColor="#ff2a8ac7"
            android:text="@string/button_patient_gardian_text" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/practice_select_practice_mode_text"
        android:id="@+id/ModetextView"
        android:layout_centerVertical="true"
        android:gravity="center"

        android:textColor="#ffffffff"
       />


</RelativeLayout>