<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	
	    <include
	        android:id="@+id/header"
	      	layout="@layout/default_header" />
	    
	    <TextView
	        android:id="@+id/pageMyDoctorTextView"
	        android:padding="5dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/header"
	        android:text="@string/page_my_doctor_intro"
	        style="@android:style/TextAppearance.Medium"
	        tools:context=".PageMyDoctorActivity" />
	
	    <Button
	        android:id="@+id/openButton"
	        android:padding="10dp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/pageMyDoctorTextView"
	        android:layout_centerHorizontal="true"
	        style="@android:style/TextAppearance.Large"
	        android:text="@string/page_my_doctor_open" />
	    
	    <include
	        android:id="@+id/footer"
	      	layout="@layout/default_footer"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	      	android:layout_below="@id/openButton" />
	
	</RelativeLayout>
</ScrollView>
